
<!-- Analysis name: Lung Melanoma RNA IonTorrent xLoc -->
<!-- Analysis ID: lung.iontorrent.rna.xloc -->
<!-- Analysis description: Pipeline for RNAseq translocation with custom references -->
<Pipeline>


<fusionReference class="buffer.ReferenceFile" filename="/yggdrasil/workspace/LungMel/lungmelanoma_v4_ref_bwa/lungmelanoma_v4_fusions.fasta" />
<termReference class="buffer.ReferenceFile" filename="/yggdrasil/workspace/LungMel/lungmelanoma_v4_ref_bwa/lungmelanoma_v4_driver_terminal_ratios.fasta" />
<reads class="buffer.FastQFile" filename="${INPUTFILE}" />

<WranglerLogger class="operator.StatusLogger" />

<TrimReads class="operator.cutadapt.CutAdaptv2" cut.opts="-O 5 -m 40" adapter.seq="ATCACCGACTGCCCATAGAG">
  <input>
    <reads />
  </input>
  <output>
      <readsTrim class="buffer.FastQFile" filename="adaptercut-${SAMPLE}.fastq" />
  </output>
</TrimReads>


<TermIndex class="operator.bwa.BWAalnD">
  <input>
    <termReference />
    <readsTrim />
  </input>
  <output>
      <termSAI class="buffer.SAIFile" filename="${WORKSPACE}/${SAMPLE}.sai" />
  </output>
</TermIndex>


<!-- Alignment with given number of threads to each reference.-->
<BwaTerm class="operator.bwa.BWASamse" sample="${WORKSPACE}/${SAMPLE}" >
  <input>
    <termReference />
    <termSAI />
    <readsTrim />
  </input>
  <output>
    <rawTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.rawterm.bam" /> 
  </output>
</BwaTerm>

<SortTerm class="operator.samtools.Sort" >
  <input>
    <rawTermBam />
  </input>
  <output>
      <sortTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.sort.term.bam" />
  </output>
</SortTerm>

<!-- Indexing -->
<IndexTerm class="operator.samtools.Index">
  <input>
    <sortTermBam />
  </input>
  <output>
  </output>
</IndexTerm>

<!-- Parse BAM file into mapped and unmapped read files.-->

<SplitTerm class="operator.samtools.MapParse">
  <input>
    <sortTermBam />
  </input>
  <output>
    <mappedTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.mapped.bam" />
    <unmappedTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.unmapped.bam" />
  </output>
</SplitTerm>

<IndexMappedTerm class="operator.samtools.Index">
  <input>
    <mappedTermBam/>
  </input>
  <output>
  </output>
</IndexMappedTerm>

<IndexUnmappedTerm class="operator.samtools.Index">
  <input>
    <unmappedTermBam/>
  </input>
  <output>
  </output>
</IndexUnmappedTerm>

<AmpliconFilterTerm class="operator.bamutils.AmpliconCoverageFilter" bedpath="/yggdrasil/workspace/LungMel/Designed.bed" fraction="0.5">
  <input>
    <mappedTermBam /> 
  </input>
  <output>
    <passMappedTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.mapped.pass.bam" />
    <failMappedTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.mapped.fail.bam" />
  </output>
</AmpliconFilterTerm>

<IndexAmpliconPass class="operator.samtools.Index">
  <input>
    <passMappedTermBam/>
  </input>
  <output>
  </output>
</IndexAmpliconPass>

<IndexAmpliconFail class="operator.samtools.Index">
  <input>
    <failMappedTermBam/>
  </input>
  <output>
  </output>
</IndexAmpliconFail>

<MatchFilter class="operator.bamutils.MatchFilter" fraction="0.667">
  <input>
    <passMappedTermBam /> 
  </input>
  <output>
    <passMatchTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.match.pass.bam" />
    <failMatchTermBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.match.fail.bam" />
  </output>
</MatchFilter>

<IndexMatchTermPass class="operator.samtools.Index">
  <input>
    <passMatchTermBam />
  </input>
  <output>
  </output>
</IndexMatchTermPass>

<IndexMatchTermFail class="operator.samtools.Index">
  <input>
    <failMatchTermBam />
  </input>
  <output>
  </output>
</IndexMatchTermFail>

<!-- Sorting and Indexing Parsed BAM files -->
<SortTermMap class="operator.samtools.Sort">
  <input>
      <passMatchTermBam />
  </input>
  <output>
      <MTSBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.MapSortTermPass.bam" />
  </output>
</SortTermMap>

<SortTermUnmapped class="operator.samtools.Sort">
  <input>
      <unmappedTermBam />
  </input>
  <output>
      <UTSBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.UnmapSortTerm.bam" />
  </output>
</SortTermUnmapped>

<IndexTermMap class="operator.samtools.Index">
  <input>
    <MTSBam />
  </input>
  <output>
  </output>
</IndexTermMap>

<IndexTermUnmapped class="operator.samtools.Index">
  <input>
    <UTSBam />
  </input>
  <output>
  </output>
</IndexTermUnmapped>

<Bam2Fastq class="operator.samtools.Bam2Fq">
  <input>
      <unmappedTermBam />
  </input>
  <output>
      <unmappedTermFastq class="buffer.FastQFile" filename="${WORKSPACE}/${SAMPLE}.unmapped.fastq" />
  </output>
</Bam2Fastq>

<!-- Filter out reads with length < 90bp. -->
<TrimUnmapped class="operator.cutadapt.CutAdaptv2" cut.opts="-O 5 -m 90" adapter.seq="ATCACCGACTGCCCATAGAG">
  <input>
    <unmappedTermFastq />
  </input>
  <output>
      <unmappedTermFastqTrim class="buffer.FastQFile" filename="${WORKSPACE}/${SAMPLE}.unmappedTerm.filter90.fastq" />
  </output>
</TrimUnmapped>

<FusionIndex class="operator.bwa.BWAalnD">
  <input>
    <fusionReference />
    <unmappedTermFastqTrim />
  </input>
  <output>
    <fusionSAI class="buffer.SAIFile" filename="${WORKSPACE}/${SAMPLE}.fusion.sai" />
  </output>
</FusionIndex>

<BWAFusion class="operator.bwa.BWASamse">
  <input>
    <fusionReference />
    <fusionSAI />
    <unmappedTermFastqTrim />
  </input>
  <output>
    <rawFusionBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.fusion.bam" />
  </output>
</BWAFusion>

<SortFusion class="operator.samtools.Sort">
  <input>
    <rawFusionBam />
  </input>
  <output>
      <sortFusionBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.fusion.sort.bam" />
  </output>
</SortFusion>

<IndexFusion class="operator.samtools.Index">
  <input>
    <sortFusionBam />
  </input>
  <output>
  </output>
</IndexFusion>

<SplitFusion class="operator.samtools.MapParse">
  <input>
    <sortFusionBam />
  </input>
  <output>
    <mappedFusionBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.mapped.fusion.bam" />
    <unmappedFusionBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.unmapped.fusion.bam" />
  </output>
</SplitFusion>

<IndexMappedFusion class="operator.samtools.Index">
  <input>
    <mappedFusionBam />
  </input>
  <output>
  </output>
</IndexMappedFusion>

<IndexUnmappedFusion class="operator.samtools.Index">
  <input>
    <unmappedFusionBam />
  </input>
  <output>
  </output>
</IndexUnmappedFusion>

<AmpliconFilter class="operator.bamutils.AmpliconCoverageFilter" bedpath="/yggdrasil/workspace/LungMel/Designed.bed" fraction="0.7">
  <input>
    <mappedFusionBam /> 
  </input>
  <output>
    <passMappedFusBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.FusMapPass.bam" />
    <failMappedFusBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.FusMapFail.bam" />
  </output>
</AmpliconFilter>

<IndexPassMappedFusion class="operator.samtools.Index">
  <input>
    <passMappedFusBam />
  </input>
  <output>
  </output>
</IndexPassMappedFusion>

<IndexFailMappedFusion class="operator.samtools.Index">
  <input>
    <failMappedFusBam />
  </input>
  <output>
  </output>
</IndexFailMappedFusion>

<MatchFilterFusion class="operator.bamutils.MatchFilter" fraction="0.667">
  <input>
    <passMappedFusBam /> 
  </input>
  <output>
    <passMatchFusBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.FusMatchPass.bam" />
    <failMatchFusBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.FusMatchFail.bam" />
  </output>
</MatchFilterFusion>

<IndexPassMatchFusion class="operator.samtools.Index">
  <input>
    <passMatchFusBam />
  </input>
  <output>
  </output>
</IndexPassMatchFusion>

<IndexFailMatchFusion class="operator.samtools.Index">
  <input>
    <failMatchFusBam />
  </input>
  <output>
  </output>
</IndexFailMatchFusion>

<FilterBamByBed class="operator.bamutils.BedFilter" bedpath="/yggdrasil/workspace/LungMel/lungmelanoma_v4_ref_bwa/lungMelanomaBreakpoints.bed">
  <input>
    <passMatchFusBam />
  </input>
  <output>
      <filterFusionBam class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.bedfilter.pass.fusion.bam" />
      <filterFusionBamFail class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.bedfilter.fail.fusion.bam" />
  </output>
</FilterBamByBed>

<IndexFusionMapped class="operator.samtools.Index">
  <input>
    <filterFusionBam />
  </input>
  <output>
  </output>
</IndexFusionMapped>

<IndexFusionUnmapped class="operator.samtools.Index">
  <input>
    <unmappedFusionBam />
  </input>
  <output>
  </output>
</IndexFusionUnmapped>

<!-- Final step, outputting results to JSON-->
<RatioCalc class="operator.oncology.OncologyUtils">
  <input>
    <reads />
    <readsTrim />
    <unmappedTermFastq />
    <unmappedTermFastqTrim />
    <mappedTermBam />
    <unmappedTermBam />
    <mappedFusionBam />
    <unmappedFusionBam />
    <filterFusionBam />
    <passMappedTermBam />
    <passMatchTermBam />
    <passMappedFusBam />
    <passMatchFusBam />
    <fusionReference />
    <termReference />
  </input>
  <output>
      <outputJSON class="buffer.JSONBuffer" filename="${WORKSPACE}/${SAMPLE}.RNA_Report.json.gz" />
  </output>
</RatioCalc>

<ReindexFailMappedFusion class="operator.samtools.Index">
  <input>
    <failMappedFusBam />
  </input>
  <output>
  </output>
</ReindexFailMappedFusion>

<MergeFusionFails class="operator.samtools.MergeFiles">
  <input>
    <failMappedFusBam />
    <failMatchFusBam />
    <filterFusionBamFail />
  </input>
  <output>
    <mergedFusionFails class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.FusionFails.bam" />
  </output>
</MergeFusionFails>

<MergeTermFails class="operator.samtools.MergeFiles">
  <input>
    <failMappedTermBam />
    <failMatchTermBam />
  </input>
  <output>
    <mergedTermFails class="buffer.BAMFile" filename="${WORKSPACE}/${SAMPLE}.TermFails.bam" />
  </output>
</MergeTermFails>

<DeleteFiles class="operator.RemoveFile">
  <input>
    <termSAI />
    <fusionSAI />
    <rawTermBam />
    <sortTermBam />
    <mappedTermBam />
    <unmappedTermBam />
    <passMappedTermBam />
    <passMatchTermBam />
    <UTSBam />
    <MTSBam />
    <rawFusionBam />
    <sortFusionBam />
    <failMappedFusionBam />
    <failMatchFusionBam />
    <filterFusionBamFail />
    <unmappedTermFastqTrim />
    <unmappedTermFastq />
    <failMappedTermBam />
    <failMatchTermBam />
    <mappedFusionBam />
  </input>
  <output>
  </output>
</DeleteFiles>

</Pipeline>
